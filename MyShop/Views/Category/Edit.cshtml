@model MyShop_Models.Category



<form method="post">
    <input asp-for="Id" hidden/> <!-- Для того чтобы в пост методе Edit было поле Id -->
    <div class="border p-3 row">

        <h2 class="text-info pl-3">Изменить категорию</h2>



        <div class="row m-3">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4 p-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 p-2">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 p-2 ">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8 p-2 ">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col p-2">
                            <input type="submit" class="btn btn-info w-100" value="Изменить" />
                        </div>
                        <div class="col p-2">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i>Back
                            </a>
                        </div>
                    </div>
                </div>


                <div class="col-4">
                    @* keep this empty*@
                </div>

            </div>


        </div>
    </div>
</form>

<!-- Валидация на стороне клиента-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}

