@model MyShop_Models.Product
@using MyShop_Utility;




<form method="post">
    <!-- enctype="multipart/form-data" - без этого изображения не будут работать -->
 
        <input asp-for="Id" hidden />
   
    <div class="border p-3 row">

        <h2 class="text-info pl-3">Удалить продукт</h2>


        <div class="row m-3">

            <div class="col-8 border border-3 border-danger">

                <div class="form-group row">
                    <div class="col-4 p-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 p-2">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-4 p-2 ">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8 p-2 ">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 p-2 ">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8 p-2 ">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                    </div>
                </div>

                

                <div class="form-group row">
                    <div class="col-4 p-2 ">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8 p-2 ">
                        <input asp-for="Category.Name" disabled class="form-control"/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4 p-2 ">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8 p-2 ">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col p-2">
                            
                                <button type="submit" class="btn btn-danger w-100">Удалить</button>

                        </div>
                        <div class="col p-2">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fa-solid fa-right-from-bracket"></i>Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-3">
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbbb" />
                }
            </div>

        </div>
    </div>
</form>

<!-- Валидация на стороне клиента-->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable:true
            });
        });

    </script>
}


